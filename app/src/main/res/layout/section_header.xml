<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_folder_header"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/folder_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:tint="@color/about_play_store_color"
        app:srcCompat="@drawable/ic_baseline_folder" />

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_count"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/folder_icon"
        android:layout_toLeftOf="@+id/iv_arrow"
        android:layout_toRightOf="@+id/folder_icon"
        android:layout_toStartOf="@+id/iv_arrow"
        android:textColor="@android:color/primary_text_light"
        tools:text="Title" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:paddingBottom="5dp"
        android:layout_toEndOf="@+id/folder_icon"
        android:layout_toLeftOf="@+id/iv_arrow"
        android:layout_toRightOf="@+id/folder_icon"
        android:layout_toStartOf="@+id/iv_arrow"
        tools:text="Count"
        android:textColor="@android:color/tertiary_text_light" />


    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/expansion_arrow_description"
        android:tint="@android:color/secondary_text_light"
        app:srcCompat="@drawable/ic_keyboard_arrow_down" />

</RelativeLayout>